{
  "manifest_version": 3,
  "name": "Velog Watcher",
  "description": "벨로그에서 팔로우한 유저의 새 글을 모아볼 수 있습니다.",
  "version": "1.1",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "permissions": ["storage"]
}